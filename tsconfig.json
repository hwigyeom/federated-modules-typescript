// TS config shared by all hosts and remotes
{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "applicationHome/HomeRemote": ["./packages/application-home/src/app"],
      "applicationCart/CartRemote": ["./packages/application-cart/src/app"]
    }
  },
  "exclude": [
    "node_modules", "./packages/**/node_modules"
  ]
}